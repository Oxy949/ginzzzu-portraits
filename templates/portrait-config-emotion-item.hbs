<div class="ginzzzu-emotion-item" data-emotion-index="{{idx}}">
  <!-- Первая строка: кнопка сворачивания + эмодзи + имя + остальные кнопки -->
  <div class="emotion-row emotion-header">
    <button type="button" class="emotion-toggle-btn" title="{{localize 'GINZZZUPORTRAITS.PortraitConfig.collapseEmotion'}}">
      <i class="fas fa-chevron-up"></i>
    </button>

    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionEmoji"}}</label>
      <input
        type="text"
        class="emotion-emoji"
        value="{{emotion.emoji}}"
        maxlength="10"
        placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionEmojiPlaceholder"}}"
      />
    </div>

    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionName"}}</label>
      <input
        type="text"
        class="emotion-name"
        value="{{emotion.name}}"
        maxlength="50"
        placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionNamePlaceholder"}}"
      />
    </div>

    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionDisplayName"}}</label>
      <input
        type="text"
        class="emotion-display-name"
        value="{{emotion.displayName}}"
        maxlength="50"
        placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionDisplayNamePlaceholder"}}"
      />
    </div>

    <div class="emotion-action-buttons">
      <button type="button" class="emotion-move-up-btn" title="{{localize 'GINZZZUPORTRAITS.PortraitConfig.moveEmotionUp'}}">
        <i class="fas fa-arrow-up"></i>
      </button>
      <button type="button" class="emotion-move-down-btn" title="{{localize 'GINZZZUPORTRAITS.PortraitConfig.moveEmotionDown'}}">
        <i class="fas fa-arrow-down"></i>
      </button>
      <button type="button" class="emotion-remove-btn" title="{{localize 'GINZZZUPORTRAITS.PortraitConfig.removeEmotion'}}">
        <i class="fas fa-trash"></i>
      </button>
    </div>
  </div>

  <!-- Содержимое (сворачиваемые строки) -->
  <div class="emotion-content">
    <!-- Вторая строка: путь к картинке + кнопка выбора -->
    <div class="emotion-row">
      <div class="form-group">
        <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionImagePath"}}</label>
        <div class="form-fields">
          <input
            type="text"
            class="emotion-path"
            value="{{emotion.imagePath}}"
            placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionImagePathPlaceholder"}}"
          />
          <button
            type="button"
            class="file-picker emotion-path-picker"
            data-type="image"
            title="{{localize 'GINZZZUPORTRAITS.PortraitConfig.emotionImageButtonHint'}}"
          >
            <i class="fas fa-file-import"></i>
          </button>
        </div>
      </div>
    </div>

    <!-- Третья строка: анимация + цвет -->
    <div class="emotion-row">
      <div class="form-group">
        <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionAnimation"}}</label>
        <select class="emotion-animation">
          {{!-- motions: [{ key, label }] --}}
          {{selectOptions motions
                          selected=emotion.animation
                          nameAttr="key"
                          labelAttr="label"}}
        </select>
      </div>

      <div class="form-group">
        <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionColor"}}</label>
        <select class="emotion-color">
          {{!-- colors: [{ key, label }] --}}
          {{selectOptions colors
                          selected=emotion.colorIntensity
                          nameAttr="key"
                          labelAttr="label"}}
        </select>
      </div>

      <div class="form-group">
        <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionHeightMultiplier"}}</label>
        <input
          type="number"
          class="emotion-height-multiplier"
          value="{{emotion.heightMultiplier}}"
          min="0"
          step="0.1"
          placeholder="1"
        />
      </div>
    </div>
  </div>
</div>
