<div class="ginzzzu-emotion-item" data-emotion-index="{{idx}}">
  <!-- Первая строка: эмодзи + имя -->
  <div class="emotion-row">
      <div class="form-group">
        <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionEmoji"}}</label>
        <input
          type="text"
          class="emotion-emoji"
          value="{{emotion.emoji}}"
          maxlength="10"
          placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionEmojiPlaceholder"}}"
        />
      </div>

    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionName"}}</label>
      <input
        type="text"
        class="emotion-name"
        value="{{emotion.name}}"
        maxlength="50"
        placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionNamePlaceholder"}}"
      />
    </div>
  </div>

  <!-- Вторая строка: путь к картинке + кнопка выбора -->
  <div class="emotion-row">
    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionImagePath"}}</label>
      <div class="form-fields">
        <input
          type="text"
          class="emotion-path"
          value="{{emotion.imagePath}}"
          placeholder="{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionImagePathPlaceholder"}}"
        />
        <button
          type="button"
          class="file-picker emotion-path-picker"
          data-type="image"
          title="{{localize 'FILES.BrowseFiles'}}"
        >
          <i class="fas fa-file-import"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Третья строка: анимация + цвет + удалить -->
  <div class="emotion-row">
    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionAnimation"}}</label>
      <select class="emotion-animation">
        {{#each motions as |motion|}}
          <option
            value="{{motion.key}}"
            {{#if (eq motion.key emotion.animation)}}selected{{/if}}
          >
            {{motion.label}}
          </option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label>{{localize "GINZZZUPORTRAITS.PortraitConfig.emotionColor"}}</label>
      <select class="emotion-color">
        {{#each colors as |color|}}
          <option
            value="{{color.key}}"
            {{#if (eq color.key emotion.colorIntensity)}}selected{{/if}}
          >
            {{color.label}}
          </option>
        {{/each}}
      </select>
    </div>

    <button type="button" class="emotion-remove-btn">
      <i class="fas fa-trash"></i> {{localize "GINZZZUPORTRAITS.PortraitConfig.removeEmotion"}}
    </button>
  </div>
</div>
